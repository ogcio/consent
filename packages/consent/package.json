{
  "name": "@ogcio/consent",
  "version": "0.1.6",
  "description": "A reusable consent management package for Next.js applications",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "import": "./dist/server/index.mjs",
      "require": "./dist/server/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "fix:linting": "biome lint --write",
    "check:formatting": "biome format",
    "check:linting": "biome lint",
    "fix:formatting": "biome format --write",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "prepublishOnly": "pnpm install --frozen-lockfile && pnpm build && pnpm test",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky || true"
  },
  "keywords": [
    "consent",
    "gdpr",
    "privacy",
    "nextjs",
    "react",
    "typescript",
    "modal",
    "compliance"
  ],
  "author": "OGCIO",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ogcio/consent.git"
  },
  "bugs": {
    "url": "https://github.com/ogcio/consent/issues"
  },
  "homepage": "https://github.com/ogcio/consent#readme",
  "peerDependencies": {
    "next": "14.2.30",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "dependencies": {
    "@ogcio/design-system-react": "1.17.1",
    "@ogcio/theme-govie": "1.7.0",
    "@ogcio/building-blocks-sdk": "^0.2.55",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "rehype-raw": "^7.0.0",
    "rehype-sanitize": "^6.0.0"
  },
  "devDependencies": {
    "@ogcio/nextjs-analytics": "^1.0.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "jsdom": "^26.1.0",
    "tsup": "^8.5.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
